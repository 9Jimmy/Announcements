<%= link_to("Back to menu", admin_path, :class => 'back-link') %>

<div class="users index">
    <h2>Users</h2>

    <%= link_to('Add new user', new_user_path, :class => 'action new') %>

    <div><%= pluralize(@users.size, 'user') %> found</div>

    <table class="table table-bordered table-striped" summary="Admin users list">
        
        <thead class="thead-dark">
        <tr>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th> 
            <th>Actions</th>
        </tr>
        </thead>

        <% @users.each do |user| %>
        <tr>
            <td><%= user.username %></td>
            <td><%= user.name %></td>
            <td><%= mail_to(user.email) %></td> 
            <td class="actions table-active">
                <%= link_to('Show', user_path(user), :class => 'action show') %>
                <%= link_to('Edit', edit_user_path(user), :class => 'action edit') %>
                <%= link_to('Delete', delete_user_path(user), :class => 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>

</div>