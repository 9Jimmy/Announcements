= link_to("Back to list", announcements_path, :class => 'back-link')
.announcements.edit
    h2 Update Announcement
    = simple_form_for(@announcement) do |f|
        table summary=("Announcement form fields")
            tr
                th= f.input :title
            tr
                th= f.input :description
            tr
                th= f.input :address
            tr
                .form-group
                    th= f.input :avatar, as: :file
            tr
                th= f.input :activity
        .form-buttons
            = f.button :submit, "Update announcement", class: "btn-primary"
