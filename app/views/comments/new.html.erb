<div class="comments new">
        <%= simple_form_for(@comment) do |f| %>

        <table summary="Comment form field">
        <tr>
            <th><%= f.input :user_id, :as => :hidden %></th>
        </tr>

        <tr>
            <th><%= f.input :comment %></th>
        </tr>

        <tr>
            <th><%= f.input :announcement_id, :as => :hidden %></th>
        </tr>
        </table>

        <div class="form-buttons">
            <%= f.button :submit, "Create comment", class: "btn-primary" %>
        </div>

        <% end %>
</div>